{
  "name": "station-electron",
  "version": "1.1.0",
  "description": "A desktop application to interact with Terra Core.",
  "author": "Terra <engineering@terra.money> (https://terra.money)",
  "license": "ISC",
  "build": {
    "appId": "money.terra.station",
    "productName": "Terra Station",
    "copyright": "Copyright Â© 2019-present ${author}",
    "mac": {
      "target": "dmg",
      "category": "public.app-category.financial"
    },
    "dmg": {
      "window": {
        "width": 540,
        "height": 370
      }
    },
    "win": {
      "target": "nsis"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "main": "public/electron.js",
  "dependencies": {
    "@ledgerhq/hw-transport-node-hid": "^5.16.0",
    "@terra-money/ledger-terra-js": "^1",
    "bech32": "^1.1.3",
    "bip32": "^2.0.4",
    "bip39": "^3.0.2",
    "crypto-js": "^3.1.9-1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "^3",
    "secp256k1": "^3.7.1",
    "typescript": "^3.9.5"
  },
  "devDependencies": {
    "electron": "^5.0.8",
    "electron-builder": "^21.1.5",
    "electron-rebuild": "^1.11.0",
    "prettier": "^2.0.5"
  },
  "scripts": {
    "start": "LOCAL=true electron .",
    "build": "electron-builder -mw",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "prebuild": "react-scripts build",
    "postinstall": "electron-rebuild",
    "prettier": "prettier --write public/**/*.js"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "semi": false
  }
}
