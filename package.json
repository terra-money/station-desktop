{
  "name": "station-electron",
  "version": "1.1.1",
  "description": "A desktop application to interact with Terra Core.",
  "author": "Terra <engineering@terra.money> (https://terra.money)",
  "license": "ISC",
  "main": "public/electron.js",
  "dependencies": {
    "@ledgerhq/hw-transport-node-hid": "^5.16.0",
    "@terra-money/ledger-terra-js": "^1",
    "bech32": "^1.1.3",
    "bip32": "^2.0.4",
    "bip39": "^3.0.2",
    "secp256k1": "^4"
  },
  "devDependencies": {
    "@types/secp256k1": "^4.0.1",
    "electron": "^9",
    "electron-builder": "^22",
    "prettier": "^2.0.5",
    "react-scripts": "^4.0.3"
  },
  "scripts": {
    "start": "LOCAL=true electron .",
    "build-linux": "react-scripts build && electron-builder -l --config build-linux.json",
    "build-macwin": "react-scripts build && electron-builder -mw --config build-macwin.json",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "prebuild": "react-scripts build",
    "postinstall": "electron-builder install-app-deps",
    "prettier": "prettier --write public/**/*.js"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "semi": false
  }
}
